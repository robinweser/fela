{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "./scripts/build.sh",
    "cle": "rimraf packages/*/package-lock.json",
    "clean": "lerna clean --yes && rimraf coverage && rimraf _book && rimraf packages/*/es && rimraf packages/*/lib",
    "docs": "gitbook install && gitbook build && gh-pages -d _book",
    "check": "yarn run format && yarn run lint && yarn run test:coverage && yarn run flow",
    "format": "prettier --write \"packages/*/src/**/*.js\"",
    "flow": "flow",
    "lint": "eslint packages/*/src/**/*.js",
    "release": "git pull --rebase && yarn run build && lerna publish && yarn run docs",
    "test": "cross-env BABEL_ENV=commonjs jest",
    "test:coverage": "cross-env BABEL_ENV=commonjs jest --coverage",
    "setup": "yarn run clean && yarn run bootstrap && yarn run build"
  },
  "jest": {
    "rootDir": "packages",
    "testPathIgnorePatterns": [
      "/mocks/",
      "/__fixtures__/",
      "/lib/"
    ]
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "benchmark"
  ],
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.0",
    "babel-core": "^6.6.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.1",
    "babel-plugin-inferno": "^1.9.0",
    "babel-plugin-transform-class-properties": "^6.9.1",
    "babel-plugin-transform-dev-warning": "^0.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "beautify": "^0.0.8",
    "codeclimate-test-reporter": "^0.3.1",
    "cross-env": "^1.0.8",
    "css-in-js-utils": "^2.0.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.14.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "fela": "^5.2.0",
    "fela-dom": "^5.0.8",
    "fela-monolithic": "^5.0.7",
    "fela-tools": "^5.0.7",
    "flow-bin": "^0.38.0",
    "gh-pages": "^0.11.0",
    "gitbook-cli": "^2.3.0",
    "gitbook-plugin-advanced-emoji": "^0.2.2",
    "gitbook-plugin-anker-enable": "0.0.4",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^2.0.0",
    "gitbook-plugin-prism": "^2.2.0",
    "gzip-size": "^3.0.0",
    "inferno": "^3.6.1",
    "inferno-component": "^3.6.1",
    "inferno-create-element": "^3.6.1",
    "jest": "^19.0.2",
    "lerna": "^2.4.0",
    "preact": "^8.1.0",
    "prettier": "^1.7.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-native": "^0.45.0",
    "react-test-renderer": "^15.5.4",
    "recompose": "^0.25.0",
    "rimraf": "^2.6.1"
  }
}
